---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";
import { getLocale, t } from "@/i18n";
import { filterPostsByLocale } from "@/utils/i18n";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const localeForPaths = "zh" as const;
  const posts = await getCollection("blog");
  const localePosts = filterPostsByLocale(posts, localeForPaths);
  const tags = getUniqueTags(localePosts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(localePosts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { tag } = params;
const { page, tagName } = Astro.props;
const locale = getLocale(Astro.currentLocale);
---

<Layout
  title={`${t(locale, "tags.tagTitle", { tag: tagName })} | ${SITE.title}`}
>
  <Header />
  <Main
    pageTitle={[t(locale, "tags.tagTitle", { tag: "" }).trim(), `${tagName}`]}
    titleTransition={tag}
    pageDesc={t(locale, "tags.tagDescription", { tag: tagName })}
  >
    <h1 slot="title" transition:name={tag}>
      {t(locale, "tags.tagTitle", { tag })}
    </h1>
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
