---
import { getLocale, t } from "@/i18n";
import { localizePath } from "@/utils/i18n";

// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");
const locale = getLocale(Astro.currentLocale);

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const pathSegments = currentUrlPath.split("/").slice(1);
const breadcrumbList =
  pathSegments[0] === locale ? pathSegments.slice(1) : pathSegments;

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts" && breadcrumbList[1]) {
  breadcrumbList.splice(
    0,
    2,
    t(locale, "breadcrumb.postsPage", { page: breadcrumbList[1] })
  );
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  const page = Number(breadcrumbList[2]);
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${page === 1 ? "" : t(locale, "breadcrumb.tagPageSuffix", { page })}`
  );
}

const labelMap: Record<string, string> = {
  posts: t(locale, "nav.posts"),
  tags: t(locale, "nav.tags"),
  about: t(locale, "nav.about"),
  archives: t(locale, "nav.archives"),
  search: t(locale, "nav.search"),
};
---

<nav class="mx-auto mt-8 mb-1 w-full max-w-app px-4" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href={localizePath(locale, "")} class="opacity-80">
        {t(locale, "breadcrumb.home")}
      </a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {labelMap[breadcrumb] ?? decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a
              href={localizePath(
                locale,
                breadcrumbList.slice(0, index + 1).join("/")
              )}
              class="capitalize opacity-70"
            >
              {labelMap[breadcrumb] ?? breadcrumb}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>
